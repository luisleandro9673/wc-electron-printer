{
  "name": "wc-electron-printer",
  "version": "1.1.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "node rebuild-usb.js",
    "postinstall": "node rebuild-usb.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -mwl --publish never",
    "dist:win": "electron-builder --win nsis --publish never",
    "dist:linux": "electron-builder --linux AppImage --publish never"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.5.0",
    "electron": "^32.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@woocommerce/woocommerce-rest-api": "^1.0.1",
    "dotenv": "^16.4.5",
    "escpos": "3.0.0-alpha.6",
    "escpos-network": "3.0.0-alpha.5",
    "escpos-usb": "3.0.0-alpha.4",
    "iconv-lite": "^0.6.3",
    "usb": "1.9.2"
  },
  "optionalDependencies": {
    "printer": "^0.4.0"
  },
  "build": {
    "appId": "com.bigbang.wcprinter",
    "productName": "WC Electron Printer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "index.html",
      "renderer.js",
      "styles.css",
      "main.js",
      "preload.js",
      "rebuild-usb.js",
      "node_modules/**",
      "package.json"
    ],
    "asar": true,
    "npmRebuild": true,
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility"
    }
  }
}
